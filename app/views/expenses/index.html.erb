<div class="header navbar navbar-expand-lg navbar-dark bg-primary px-3">
   <%= link_to categories_path do%>
      <i class="bi bi-arrow-left text-white"></i>
   <% end %>
   <div class="d-flex align-items-center mx-auto">
     <h2 class="my-1">Expenses</h2>
   </div>
</div>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <% if @category %>
        <i class="<%= @category.icon %> text-xl mr-3"></i>
      <% end %>
      <h4><%= number_to_currency(@expenses.sum(:amount)) %></h4>
    </div>
  </div>
</div>

<div class="container mt-4">
  <% @expenses.each do |expense| %>
    <div class="d-flex align-items-center my-3">
      <h4><%= expense.name %></h4>
      <p><%= expense.created_at.strftime("%b %d %Y") %></p>
      <p><%= number_to_currency(expense.amount) %></p>
    </div>
  <% end %>
</div>

<div class="position-fixed bottom-0 w-100 bg-success text-white p-3 text-center">
  <%= link_to "Add a new expense", new_category_expense_path, class: "text-white no-underline" %>
</div>
